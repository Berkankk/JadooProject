@model UpdateBrandCommand
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Marka Güncelleme Sayfası</div>
        </div>

        <div class="card-body">
            <div class="row">

                <div class="container">
                    <div class="form-group">
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="BrandID" class="form-control" />
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <input type="submit" class="btn btn-outline-primary" value="Güncelle" />

                        </form>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

