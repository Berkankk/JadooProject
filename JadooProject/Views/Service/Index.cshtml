@model List<GetServiceQueryresult>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <h1>Hizmetlerimiz </h1>

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İkon</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Icon</td>
                <td>
                    <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a>
                    <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }

    </table>

    <br />
    <a href="/Service/CreateService/" class="btn btn-primary">Yeni Hizmet Ekleme Sayfası</a>
</div>


